{
  "name": "IMDB Ratings",
  "version": "1.0",
  "description": "This adds the user rating beside the episode title for quick reference. Enjoy! I'll add more soon!",
  "page_action" :
  {
    "default_icon" : "icon.png",
    "default_title" : "Fixing your imdb!"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.imdb.com/*",
        "https://www.imdb.com/*"
      ],
      "js" : ["imdbscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "icon.png"	
  }
}
